.UCenter-bg {
    background-image: url(https://cdn.nlark.com/yuque/0/2019/jpeg/280373/1551924824231-assets/web-upload/5fd0d7ff-f3a9-41d5-a166-220621437c10.jpeg);
    background-size: cover;
    height: 550rpx;
    display: flex;
    justify-content: center;
    padding-top: 40rpx;
    overflow: hidden;
    position: relative;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0,0,0,0.3);
}

.UCenter-bg text {
    opacity: 0.8;
}

.UCenter-bg image {
    width: 200rpx;
    height: 200rpx;
}

.UCenter-bg .gif-wave {
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx;
}

.user_info {
    text-align: center;
    padding-top: 100rpx;
    position: relative;
}

.cs_user_name {
    font-size: 28rpx;
    color: #666;
}

.user_info image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    display: block;
    margin: 0 auto;
}

.cs_copy_right {
    position: absolute;
    bottom: 100rpx;
    font-size: 22rpx;
    color: #666;
    padding: 0 80rpx;
}

.sign_in_btn {
    position: absolute;
    right: 50rpx;
    top: 250rpx;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50%;
    font-size: 28rpx;
    text-align: center;
    border: 1rpx solid #85DA46;
}

.cs_home_menu {
    text-align: center;
    font-size: 25rpx;
    color: #666;
    margin-top: 100rpx;
}

.csl_ogin {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    line-height: 200rpx;
    display: block;
    margin: 0 auto;
    border: none;
}

.user_info button::after {
    border: none;
}

.kefu {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    right: 0;
    top: 0;
    opacity: 0;
}

.kefu::after {
    opacity: 0;
}

.re_item {
    width: 110rpx;
    display: inline-block;
    margin-right: 15rpx;
}

.cs_item_1 {
    width: 110rpx;
    margin: 0 auto;
}

.cs_item_1 .item_img_box {
    width: 110rpx;
    height: 153rpx;
    position: relative;
    background-color: #333;
}

.cs_item_1 .item_img_box image {
    width: 100%;
    height: 100%;
}

.cs_item_1 .item_img_box .item_vession {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    color: #fff;
    background-color: rgba(0,0,0,0.5);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.cs_padding-lr {
    padding-left: 20rpx!important;
    padding-right: 20rpx!important;
}

.item_name {
    height: 50rpx;
    line-height: 50rpx;
}

.cs_item_1 .item_img_box .item_lang {
    position: absolute;
    top: 20rpx;
    background-color: rgba(57,180,73,0.7);
}

.cs_video_title {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}